{
    "name": "Zipline URL Shortener",
    "version": "1.0",
    "description": "Create short URLs using Zipline (zipline.diced.tech)",
    "manifest_version": 3,
    "author": "Spencer Hooks",
    "permissions": [
        "tabs",
        "storage",
        "clipboardWrite"
    ],
    "host_permissions": ["*://*/"], 
    "browser_specific_settings":{
        "gecko": {
            "id": "ziplineextension@example.org"
        }
    },
    "icons": { "16": "icons/zipline16.png",
           "48": "icons/zipline48.png",
          "128": "icons/zipline128.png"
    },
    "action":{
        "default_popup": "index.html",
        "default_title": "Send to Zipline"
    }
}